@page
@model OliveBranch.Web.Pages.Admin.FoodTypes.CreateModel
@{
}
<form method="post">
    <div>
        <div class="border p-3 mt-4 mb-4">
            <div class="row pb-2">
                <h2>Create Food Type</h2>
            </div>
        </div>
        <fieldset>
            <div class="mb-3">
                <label class="pb-1" asp-for="FoodType.Name">Name: </label>
                <input class="form-control" style="width: 50%;" type="text" asp-for="FoodType.Name" name="foodName" />
                <span asp-validation-for="FoodType.Name"></span>
            </div>
            <button class="btn btn-success" type="submit">Create</button>
        </fieldset>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}