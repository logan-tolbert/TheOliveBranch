@page
@model OliveBranch.Web.Pages.Admin.FoodTypes.IndexModel
@{
}
@{
    ViewData["Title"] = "FoodTypes";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Food Types</h1>

        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-success">New Type</a>
        </div>

    </div>
    <table class="table table-responsive table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th scope="col" class="col-3">Id</th>
                <th scope="col" class="col-3">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FoodList)
            {
                <tr>
                    <td class="col-3">@item.Id</td>
                    <td class="col-3">@item.Name</td>
                    <td>
                        <div class="btn-row-group w-75" role="group">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success mx-2">Edit</a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class=" btn btn-danger mx-2">Delete</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

