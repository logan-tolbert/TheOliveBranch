@page
@model OliveBranch.Web.Pages.Admin.Categories.EditModel
@{

}
<form method="post">
    
    <div>
        <div class="border p-3 mt-4 mb-4">
            <div class="row pb-2">
                <h2>Edit Category</h2>
            </div>
        </div>
        <fieldset>
            <div class="mb-3">
                <label class="pb-1" asp-for="@Model.Category.DisplayOrder">Display Order: </label>
                <input class="form-control" style="width: 50%;" type="number" asp-for="@Model.Category.DisplayOrder" name="DisplayOrder" />
                <span asp-validation-for="Category.DisplayOrder"></span>
            </div>
            <div class="mb-3">
                <label class="pb-1" asp-for="@Model.Category.CategoryName">Category Name: </label>
                <input class="form-control" style="width: 50%;" type="text" asp-for="@Model.Category.CategoryName" name="CategoryName" />
                <span asp-validation-for="Category.CategoryName"></span>
            </div>
            <button class="btn btn-success" type="submit">Update</button>
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </fieldset>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}