@page
@model OliveBranch.Web.Pages.Admin.Categories.DeleteModel
@{

}
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div>
        <div class="border p-3 mt-4 mb-4">
            <div class="row pb-2">
                <h2>Delete Category</h2>
            </div>
        </div>
        <fieldset>
            <div class="mb-3">
                <label class="pb-1" asp-for="@Model.Category.DisplayOrder">Display Order:</label>
                <input class="form-control" style="width: 50%;" type="number" asp-for="@Model.Category.DisplayOrder" name="DisplayOrder" disabled/>
            </div>
            <div class="mb-3">
                <label class="pb-1" asp-for="@Model.Category.CategoryName">CategoryName:</label>
                <input class="form-control" style="width: 50%;" type="text" asp-for="@Model.Category.CategoryName" name="CategoryName" disabled/>
            </div>
            <button class="btn btn-danger" type="submit">Delete</button>
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </fieldset>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}